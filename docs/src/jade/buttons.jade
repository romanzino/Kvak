extends chunks/layout.jade

block main
    h1 Buttons
    
    h4 Extra small height of buttons
    
    p
        .btn--group
            button.btn.btn--xsm Test button
            button.btn.btn--xsm.btn--green Test button
            button.btn.btn--xsm.btn--red Test button
            button.btn.btn--xsm.btn--blue Test button
            button.btn.btn--xsm.btn--yellow Test button
    
    h4 Small height of buttons
    
    p
        button.btn.btn--sm Test button
        button.btn.btn--sm.btn--green Test button
        button.btn.btn--sm.btn--red Test button
        button.btn.btn--sm.btn--blue Test button
        button.btn.btn--sm.btn--yellow Test button
    
    h4 Medium height of buttons
    
    p
        button.btn.btn--md Test button
        button.btn.btn--md.btn--green Test button
        button.btn.btn--md.btn--red Test button
        button.btn.btn--md.btn--blue Test button
        button.btn.btn--md.btn--yellow Test button
    
    h4 Large height of buttons
    
    p
        button.btn.btn--lg Test button
        button.btn.btn--lg.btn--green Test button
        button.btn.btn--lg.btn--red Test button
        button.btn.btn--lg.btn--blue Test button
        button.btn.btn--lg.btn--yellow Test button
    
    h4 Extra large height of buttons
    
    p
        button.btn.btn--xlg Test button
        button.btn.btn--xlg.btn--green Test button
        button.btn.btn--xlg.btn--red Test button
        button.btn.btn--xlg.btn--blue Test button
        button.btn.btn--xlg.btn--yellow Test button
    
    h4 Buttons with a tag
    
    p
        a.btn.btn--md(href='#') Test button-link
        a.btn.btn--md.btn--green(href='#') Test button-link
        a.btn.btn--md.btn--red(href='#') Test button-link
        a.btn.btn--md.btn--blue(href='#') Test button-link
        a.btn.btn--md.btn--yellow(href='#') Test button-link
    
    h4 Expanded button
    
    p
        button.btn.btn--md.btn--blue.btn--expanded Lorem ipsum dolor sit amet

    h4 Expanded button, underline style
    
    p
        button.btn.btn--md.btn--blue.btn--underline.btn--expanded Lorem ipsum dolor sit amet
    
    h2 Buttons group

    h4 Simple group
    
    .btn-group
        .btn-group__item
            button.btn.btn--lg.btn--green Test button #1
        .btn-group__item
            button.btn.btn--lg.btn--green Test button #2
        .btn-group__item            
            button.btn.btn--lg.btn--green Test button #3
    
    h4 Expanded group

    .btn-group.btn-group--expanded
        .btn-group__item.btn-group--expanded__item
            button.btn.btn--lg.btn--green.btn--expanded Test button
        .btn-group__item.btn-group--expanded__item
            button.btn.btn--lg.btn--red.btn--expanded Test button
        .btn-group__item.btn-group--expanded__item
            button.btn.btn--lg.btn--blue.btn--expanded Test button