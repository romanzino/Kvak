@import 'settings'

.thumbnail
    display flex
    justify-content center
    align-items center

    &__img
        max-width 100%
        max-height 100%

.thumbnail--left
    justify-content flex-start

.thumbnail--right
    justify-content flex-end

.thumbnail--square
    &:after
        content ' '
        display block
        padding-bottom 100%

.thumbnail--bg
    background-size cover
    background-repeat no-repeat
    background-position center center