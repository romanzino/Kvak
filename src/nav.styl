@import 'settings'

.nav
    display flex
    margin 0
    padding 0
    list-style-type none

    &__link
        //when display flex text-overflow ellipsis will not work
        display block
        max-width 100%
        text-overflow ellipsis
        overflow hidden
        white-space nowrap

.nav--vertical
    flex-direction column

.nav--horizontal
    flex-direction row

    &__link
        padding-left nav-horizontal-item-margin

.nav--expanded
    flex-direction row

    &__item
        flex-grow 1
    &__link
        text-align center